<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ultimatesoftil.citron">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".ui.activities.Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Main"
        android:supportsRtl="true">

        <activity android:name="com.ultimatesoftil.citron.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FirebaseAuth.EmailSignup"/>
        <activity android:name=".FirebaseAuth.EmailLogin"/>
        <activity android:name="com.ultimatesoftil.citron.ui.activities.ClientDetailActivity"
            android:label=""
            android:parentActivityName="com.ultimatesoftil.citron.ui.activities.MainActivity"/>
        <activity android:name="com.ultimatesoftil.citron.ui.ViewSamplesActivity"
            android:label="Samples"
            android:parentActivityName="com.ultimatesoftil.citron.ui.activities.MainActivity"/>
        <activity android:name="com.ultimatesoftil.citron.ui.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="com.ultimatesoftil.citron.ui.activities.MainActivity"/>

    </application>

</manifest>
